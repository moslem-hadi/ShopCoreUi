<section class="py-5 bg-striped">
    <div class="view_slider recommended">
        <div class="container">

            <div class="">

                <h3>
                    <a href="#">
                        title
                        <small class="float-left">مشاهده همه&nbsp;<i class="fa fa-angle-left align-middle mr-1"></i></small>
                    </a>
                </h3>
                <div class="view row">
                    
                    <div class="col-md-3 col-sm-3 col-6">
                        <div class="product-item mb-3">
                            <a href="#" title="<%=pr.Title %>">
                                <img class="img-fluid"
                                     src="/content/productpic/<%=pr.Pic%>" />
                            </a>
                            <div class="inner-slider">
                                <div class="inner-wrapper">
                                    <div class="d-flex align-items-center">
                                        <span class="seller-image">
                                            <span class="seller">
                                                <%=pr.FullName %>
                                            </span>
                                            <img class="img-fluid"
                                                 src="/content/userpic/<%= pr.UserPic %>"
                                                 alt="" />
                                        </span>
                                        <span class="seller-name">
                                            <a href="#" title="<%=pr.Title %>">
                                                <%=pr.Title %>
                                            </a>
                                        </span>
                                    </div>
                                    <div class="content-info">
                                        <div class="price">
                                            <del>30,000</del>
                                            <span class='free'>رایگان</span>
                                            2,000 <small>تومان</small>
                                        </div>
                                    </div>
                                    <div class="footer">
                                        <i class="fa fa-heart" aria-hidden="true"></i>

                                        <div class="rating-wrapper" data-toggle="tooltip" title="بدون امتیاز">
                                            <i class="fa fa-star"></i>
                                            <span>3</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>



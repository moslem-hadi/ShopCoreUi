@using Webtina.UI.Models.ViewModels;

@using Webtina.UI.Web.Controllers.Components;
@{
    ViewData["Title"] = "صفحه نخست";
}
<title>صفحه نخست</title>
<meta name="description" content="<%= seodesc%>" />
  
<meta property='og:title' content='<%= title%>' />
<meta property='og:url' content='http://karokia.ir/' />
<meta property='og:image' content='http://karokia.ir/images/logo.png' />
<meta property='og:description' content='<%= seodesc%>' />
<meta property='og:article:tag' content='<%= title%>' />
<meta property='og:locale' content='ir_FA' />
<meta property='og:site_name' content='کاروکیا' />
<meta name='twitter:title' content='<%= title%>'>
<meta name='twitter:description' content='<%= seodesc%>'>
<meta name='twitter:image:src' content='http://karokia.ir/images/logo.png'>
<meta itemprop='name' content='<%= title%>'>
<meta itemprop='description' content='<%= seodesc%>'>
<meta itemprop='image' content='http://karokia.ir/images/logo.png'>
<link href="~/themes/miver/css/owl.carousel.css" rel="stylesheet" />


<!-- Begin Page Content -->
<section class="py-5 homepage-search-block position-relative">
    <div class="container">
        <div class="row py-lg-5">
            <div class="col-lg-5">
                <img class="img-fluid" src="~/themes/miver/images/File-searching.svg" alt="" />
            </div>
            <div class="col-lg-7">
                <div class="homepage-search-title">
                    <h1 class="mb-3 text-shadow text-gray-900 font-weight-bold">
                        آموزش مورد نظر خودتون رو پیدا کنید
                    </h1>
                    <h5 class="mb-5 text-shadow text-gray-800 font-weight-normal">
                        از بین هزاران آموزش انتخاب کنید.
                    </h5>
                </div>
                <div class="homepage-search-form">
                    <form class="form-noborder">
                        <div class="form-row">
                            <div class="col-lg-10 col-md-10 col-sm-12 form-group">
                                <input type="text"
                                       placeholder="جستجو کنید..."
                                       class="form-control border-0 form-control-lg shadow-sm" />
                            </div>
                            <div class="col-lg-2 col-md-2 col-sm-12 form-group">
                                <button type="submit"
                                        class="btn btn-success btn-block btn-lg btn-gradient shadow-sm">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="popular">
                    <span class="text-body-2">پرجستجوترین</span>
                    <ul>
                        <li><a href="#" class="text-body-2">یوتوب</a></li>
                        <li>
                            <a href="#" class="text-body-2">کسب درآمد از اینستاگرام</a>
                        </li>
                        <li><a href="#" class="text-body-2">تولیدی</a></li>
                        <li>
                            <a href="#" class="text-body-2">بورس</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="py-5 bg-dark">
    <div class="view_slider recommended">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="text-white title">محبوب ترین‌ها</h3>
                    <div class="view recent-slider recommended-slider">
                        <cache expires-after="@TimeSpan.FromHours(2)">
                            @await Component.InvokeAsync("Products", new ProductsComponentQuery { Count = 20 })
                        </cache>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
